@model VideoRentalApp.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "EditOrAddMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.movie.Name != null)
{
    <h2>Edit Movie</h2>

}
else
{
    <h2>Add Movie</h2>
}


@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.movie.Name)
        @Html.TextBoxFor(m => m.movie.Name, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.movie.ReleseDate)
        @Html.TextBoxFor(m => m.movie.ReleseDate, "{0: d MMM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.movie.DateAdded)
        @Html.TextBoxFor(m => m.movie.DateAdded, "{0: d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.movie.NumberInStuck)
        @Html.TextBoxFor(m => m.movie.NumberInStuck, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.movie.GenreId)
        @Html.DropDownListFor(m => m.movie.GenreId, new SelectList(Model.Genre, "Id", "Name"), "select Genre type", new { @class = "form-control" })

    </div>
    
    @Html.HiddenFor(m => m.movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
